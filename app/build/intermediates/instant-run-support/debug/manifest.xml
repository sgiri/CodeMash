<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catmug.codemash"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        name="com.catmug.codemash.CodeMashApp"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/codemashlogo_lg"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.catmug.codemash.MainActivity"
            android:label="CodeMash 2017" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catmug.codemash.SessionTabLayoutActivity"
            android:label="Session Listing" >
        </activity>

        <!-- Single List Item View -->
        <activity
            android:name="com.catmug.codemash.SingleListItemActivity"
            android:label="Session Detail" >
        </activity>
        <activity android:name="com.catmug.codemash.SessionListActivity" >
        </activity>
        <activity android:name="com.catmug.codemash.JSONParser" >
        </activity>
        <activity android:name="com.catmug.codemash.GetSessions" >
        </activity>
        <activity android:name="com.catmug.codemash.SessionService" >
        </activity>
        <activity
            android:name="com.catmug.codemash.FavoriteSessionsActivity"
            android:label="@string/Favorites" >
        </activity>
        <activity
            android:name="com.catmug.codemash.EventMapActivity"
            android:label="@string/EventMap" >
        </activity>
        <activity
            android:name="com.catmug.codemash.AboutActivity"
            android:label="@string/About" >
        </activity>
        <activity
            android:name="com.catmug.codemash.SpeakerListActivity"
            android:label="@string/Speakers" >
        </activity>
        <activity
            android:name="com.catmug.codemash.SpeakerListItemActivity"
            android:label="@string/Speaker" >
        </activity>
    </application>

</manifest>