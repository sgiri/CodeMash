<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/codemash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/codemashlogo_lg"
                android:gravity="center"
                android:text="@string/codemashabbr"
                android:textColor="@color/orange_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnPrecompilerSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/openbook"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/PrecompilerSessions"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/laptop"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/Sessions"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnSpeakers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/Speakers"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnFavorites"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/goldstar"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/Favorites"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnRefreshAll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/ic_menu_refresh"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/RefreshAll"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTwitterFeed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/twitterbird"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"                                
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/TwitterFeed"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnEventMap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/mapicon"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/EventMap"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnAbout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/background_alt"
                android:drawableLeft="@drawable/about"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:linksClickable="true"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/About"
                android:textColor="@color/foreground_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>